{
  "$jason": {
    "head": {
      "title": "Das Brunch",
      "description": "Das Brunch reading list app",
      "icon": "https://raw.githubusercontent.com/nealrs/dbapp/master/db.png",
      "actions": {
        "$pull": {
          "trigger": "fetch"
        },
        "$foreground": {
          "trigger": "fetch"
        },
        "$show": {
          "trigger": "fetch"
        },
        "$load": {
          "trigger": "fetch"
        },
        "fetch": {
          "type": "$network.request",
          "options": {
            "url": "https://raw.githubusercontent.com/nealrs/dbapp/master/json/current.json"
          },
          "success": {
            "type": "$render"
          }
        }
      },
      "templates": {
        "body": {
          "header": {
            "title": "Das Brunch",
            "style": {
              "background": "#D03C0F",
              "color": "#ffffff",
              "font": "AvenirNext-Bold",
              "size": "14"
            }
          },
          "footer": {
            "tabs": {
              "style": {
                "background": "#D03C0F",
                "color": "#ffffff"
              },
              "items": [
                {
                  "text": "Latest stories",
                  "url": "https://raw.githubusercontent.com/nealrs/dbapp/master/json/current.json"
                },
                {
                  "text": "Past issues",
                  "url": "https://raw.githubusercontent.com/nealrs/dbapp/master/json/archive.json"
                }
              ]
            }
          },
          "sections": {
        		"{{#each $jason.posts}}": {
        			"header": {
        				"type": "horizontal",
        				"style": {
        					"background": "#ffffff",
        					"padding": "9",
        					"spacing": "13"
        				},
        				"components": [{
        					"type": "vertical",
        					"href": {
        						"url": "{{url}}",
        						"view": "web"
        					},
        					"components": [{
        						"type": "label",
        						"text": "{{title}}",
        						"style": {
        							"font": "HelveticaNeue-Bold",
        							"size": "12"
        						}
        					}, {
        						"type": "label",
        						"text": "{{publisher}}",
        						"style": {
        							"font": "HelveticaNeue",
        							"size": "11"
        						}
        					}]
        				}]
        			},
        			"items": [{
        				"style": {
        					"width": "100%",
        					"padding": "0"
        				},
        				"type": "image",
        				"url": "{{img}}"
        			}]
        		}
        	}
        }
      }
    }
  }
}
