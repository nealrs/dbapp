{
  "$jason": {
    "head": {
      "title": "Das Brunch",
      "description": "Das Brunch reading app",
      "icon": "https://raw.githubusercontent.com/nealrs/dbapp/master/db.png",
      "actions": {
        "$pull": {
          "trigger": "fetch"
        },
        "$foreground": {
          "trigger": "fetch"
        },
        "$show": {
          "trigger": "fetch"
        },
        "$load": {
          "trigger": "fetch"
        },
        "fetch": {
          "type": "$network.request",
          "options": {
            "url": "https://raw.githubusercontent.com/nealrs/dbapp/master/json/current.json"
          },
          "success": {
            "type": "$render"
          }
        }
      },
      "templates": {
        "body": {
          "style": {
            "background": "#230B0F",
            "color": "#ffffff",
            "border": "none"
          },
          "header": {
            "title": "Das Brunch",
        "style": {
          "background": "#D03C0F",
          "color": "#111111",
          "font": "AvenirNext-Bold",
          "size": "14"
        }
            },
            "style": {
              "background": "#230B0F",
              "font": "AvenirNext-Heavy",
              "size": "14",
              "shyt": "true",
              "color": "#ffffff"
            }
          },
          "footer": {
            "tabs": {
              "style": {
                "background": "#230B0F",
                "color": "#ffffff"
              },
              "items": [
                {
                  "text": "New",
                  "url": "https://raw.githubusercontent.com/nealrs/dbapp/master/json/current.json"
                },
                {
                  "text": "Previous issues",
                  "url": "https://raw.githubusercontent.com/nealrs/dbapp/master/json/archive.json"
                }
              ]
            }
          },
          "sections": {
            "{{#each $jason.posts}}": {
              "header": {
                "type": "label",
                "text": "Get it while it's hot!",
                "style": {
                  "background": "#230B0F",
                  "font": "HelveticaNeue-CondensedBold",
                  "padding": "10",
                  "color": "#ffffff",
                  "size": "12"
                }
              },
              "items": [
                {
                  "type": "vertical",
                  "href": {
                    "url": "{{url}}",
                    "view": "web"
                  },
                  "style": {
                    "background": "#ffffff"
                  },
                  "components": [
                    {
                      "type": "vertical",
                      "components": [
                        {
                          "type": "horizontal",
                          "style": {
                            "distribution": "fill",
                            "padding": "10",
                            "spacing": "10"
                          },
                          "components": [
                            {
                              "type": "vertical",
                              "style": {
                                "distribution": "fill",
                                "spacing": "5"
                              },
                              "components": [
                                {
                                  "type": "label",
                                  "style": {
                                    "size": "18",
                                    "font": "AvenirNext-Heavy",
                                    "color": "#cb4924"
                                  },
                                  "text": "{{title}}"
                                },
                                {
                                  "type": "label",
                                  "style": {
                                    "font": "AvenirNext-Regular",
                                    "size": "12",
                                    "color": "#000000"
                                  },
                                  "text": "{{publisher}}"
                                }
                              ]
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "image",
                      "url": "{{img}}",
                      "style": {
                        "width": "100%",
                        "padding": "0"
                      }
                    }
                  ]
                }
              ]
            }
          }
        }
      }
    }
  }
}
