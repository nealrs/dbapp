{
  "$jason": {
    "head": {
      "title": "Das Brunch",
      "description": "Das Brunch reading list app",
      "icon": "http://nealshyam.com.s3.amazonaws.com/dasbrunch/db.png",
      "styles": {
        "bold": {
          "font": "HelveticaNeue-CondensedBold",
          "size": "15"
        },
        "padded": {
          "padding": "20"
        },
        "spaced":{
          "spacing": "30"
        },
        "normal": {
          "font": "HelveticaNeue",
          "size": "12"
        }
      },
      "actions": {
        "$pull": {
          "type": "$reload"
        },
        "$load": {
          "type": "$network.request",
          "options": {
            "url": "http://nealshyam.com.s3.amazonaws.com/dasbrunch/stories.json"
          },
          "success": {
            "type": "$render"
          }
        }
      },
      "templates":{
        "body":{
          "header": {
            "title": "Das Brunch",
            "style": {
              "background": "#D03C0F",
              "color": "#ffffff",
              "font": "AvenirNext-Bold",
              "size": "14"
            },
            "menu": {
              "text": "üëãüèΩ Neal",
              "action": {
               "type": "$href",
               "options": {
                  "url": "https://nealshyam.com",
                  "view": "web"
                }
              }
            }
          },
          "sections": [
            {
              "header": {
                "type": "vertical",
                "style": {
                  "background": "#ebebeb",
                  "align": "center",
                  "shy": "true"
                },
                "components": [{
                  "type": "label",
                  "class": "normal",
                  "text": "Start your day smart with an awesome read!"
                }]
              },
              "items": {
                  "{{#each $jason.stories}}": {
                    "type": "vertical",
                    "style": {
                      "spacing": "30",
                      "padding": "10"
                    },
                    "action": {
                     "type": "$href",
                     "options": {
                        "url": "{{url}}",
                        "view": "web"
                      }
                    },
                      "components": [
                        {
                          "type": "label",
                          "text": "{{title}}",
                          "style": {
                            "class": "bold padded spaced"
                           }
                        },
                        {
                          "type": "label",
                          "text": "({{publisher}})",
                          "style": {
                            "class": "normal padded spaced"
                           }
                        },
                        {
                          "type": "image",
                          "url": "{{img}}",
                          "style": {
                            "width": "100%",
                            "height": "300"
                           }
                        }
                      ]
                  }
              }
            }
          ]
        }
      }
    }
  }
}
